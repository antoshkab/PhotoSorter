<Application x:Class="PhotoSorter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:resx="clr-namespace:PhotoSorter.Properties"
             StartupUri="MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <resx:Resources x:Key="Resources"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/Core.xaml"/>
                <ResourceDictionary Source="Theme/Brushes.xaml"/>
                <ResourceDictionary Source="Theme/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
